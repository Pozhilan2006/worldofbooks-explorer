{
    "root": true,
    "env": {
        "node": true,
        "es2022": true
    },
    "extends": [
        "next/core-web-vitals"
    ],
    "rules": {
        "react/no-unescaped-entities": "off",
        "@typescript-eslint/no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "@typescript-eslint/no-explicit-any": "warn",
        "no-console": [
            "warn",
            {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ]
    },
    "ignorePatterns": [
        "dist",
        "node_modules",
        "build",
        ".next"
    ]
}