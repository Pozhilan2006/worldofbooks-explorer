# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/worldofbooks
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=user
DATABASE_PASSWORD=password
DATABASE_NAME=worldofbooks
DATABASE_SYNCHRONIZE=false
DATABASE_LOGGING=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRATION=7d

# CORS
CORS_ORIGIN=http://localhost:3001

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Scraping
SCRAPE_RATE_LIMIT=10
SCRAPE_TIMEOUT=30000
SCRAPE_CONCURRENT_LIMIT=5
SCRAPE_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Cache
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs
