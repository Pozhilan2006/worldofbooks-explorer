generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Navigation {
  id            String     @id @default(uuid())
  title         String
  slug          String     @unique
  sourceUrl     String     @unique
  lastScrapedAt DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  categories    Category[]
}

model Category {
  id            String     @id @default(uuid())
  navigationId  String
  parentId      String?
  title         String
  slug          String
  sourceUrl     String     @unique
  productCount  Int?
  lastScrapedAt DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  navigation    Navigation @relation(fields: [navigationId], references: [id], onDelete: Cascade)
  parent        Category?  @relation("CategoryTree", fields: [parentId], references: [id], onDelete: Cascade)
  children      Category[] @relation("CategoryTree")
  products      Product[]
  viewHistory   ViewHistory[]

  @@unique([navigationId, slug])
}

model Product {
  id            String     @id @default(uuid())
  categoryId    String?
  sourceId      String     @unique
  title         String
  author        String?
  price         Decimal?
  currency      String?
  imageUrl      String?
  sourceUrl     String     @unique
  lastScrapedAt DateTime?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  category      Category?  @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  detail        ProductDetail?
  viewHistory   ViewHistory[]
  reviews       Review[]
}

model ProductDetail {
  productId     String     @id
  description   String?
  specs         Json?
  ratingsAvg    Decimal?
  reviewsCount  Int?
  publisher     String?
  publicationDate DateTime?
  isbn          String?
  lastScrapedAt DateTime?

  product       Product    @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Review {
  id        String   @id @default(uuid())
  productId String
  author    String?
  rating    Int?
  text      String?
  createdAt DateTime @default(now())

  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, author, text])
}

model ScrapeJob {
  id          String   @id @default(uuid())
  jobType     String
  targetUrl   String
  status      String
  startedAt   DateTime @default(now())
  completedAt DateTime?
  errorMsg    String?
  itemsScraped Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status])
  @@index([startedAt])
}

model ViewHistory {
  id         String    @id @default(uuid())
  sessionId  String    @map("session_id")
  productId  String?   @map("product_id")
  categoryId String?   @map("category_id")
  path       String
  title      String?
  viewedAt   DateTime  @default(now()) @map("viewed_at")
  createdAt  DateTime  @default(now()) @map("created_at")

  product  Product?  @relation(fields: [productId], references: [id], onDelete: SetNull)
  category Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  @@index([sessionId])
  @@index([viewedAt])
  @@index([sessionId, viewedAt(sort: Desc)])
  @@map("view_history")
}
